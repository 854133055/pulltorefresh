<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="pub_fw_PullToRefresh">
        <!-- A drawable to use as the background of the Refreshable View -->
        <attr name="pub_fw_ptrRefreshableViewBackground" format="reference|color" />
        <!-- A drawable to use as the background of the Header and Footer Loading Views -->
        <attr name="pub_fw_ptrHeaderBackground" format="reference|color" />
        <!-- Text Color of the Header and Footer Loading Views -->
        <attr name="pub_fw_ptrHeaderTextColor" format="reference|color" />
        <!-- Text Color of the Header and Footer Loading Views Sub Header -->
        <attr name="pub_fw_ptrHeaderSubTextColor" format="reference|color" />
        <!-- Mode of Pull-to-Refresh that should be used -->
        <attr name="pub_fw_ptrMode">
            <flag name="pub_fw_disabled" value="0x0" />
            <flag name="pub_fw_pullFromStart" value="0x1" />
            <flag name="pub_fw_pullFromEnd" value="0x2" />
            <flag name="pub_fw_both" value="0x3" />
            <flag name="pub_fw_manualOnly" value="0x4" />
        </attr>
        <!-- Whether the Indicator overlay(s) should be used -->
        <attr name="pub_fw_ptrShowIndicator" format="reference|boolean" />
        <!-- Drawable to use as Loading Indicator. Changes both Header and Footer. -->
        <attr name="pub_fw_ptrDrawable" format="reference" />
        <!-- Drawable to use as Loading Indicator in the Header View. Overrides value set in ptrDrawable. -->
        <attr name="pub_fw_ptrDrawableStart" format="reference" />
        <!-- Drawable to use as Loading Indicator in the Footer View. Overrides value set in ptrDrawable. -->
        <attr name="pub_fw_ptrDrawableEnd" format="reference" />
        <!-- Whether Android's built-in Over Scroll should be utilised for Pull-to-Refresh. -->
        <attr name="pub_fw_ptrOverScroll" format="reference|boolean" />
        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views -->
        <attr name="pub_fw_ptrHeaderTextAppearance" format="reference" />
        <!-- Base text color, typeface, size, and style for Header and Footer Loading Views Sub Header -->
        <attr name="pub_fw_ptrSubHeaderTextAppearance" format="reference" />
        <!-- Style of Animation should be used displayed when pulling. -->
        <attr name="pub_fw_ptrAnimationStyle">
            <flag name="pub_fw_rotate" value="0x0" />
            <flag name="pub_fw_flip" value="0x1" />
            <flag name="pub_fw_animDrawable" value="0x2" />
        </attr>
        <!-- Whether the user can scroll while the View is Refreshing -->
        <attr name="pub_fw_ptrScrollingWhileRefreshingEnabled" format="reference|boolean" />
        <!--
        	Whether PullToRefreshListView has it's extras enabled. This allows the user to be 
        	able to scroll while refreshing, and behaves better. It acheives this by adding
        	Header and/or Footer Views to the ListView.
        -->
        <attr name="pub_fw_ptrListViewExtrasEnabled" format="reference|boolean" />
        <!--
        	Whether the Drawable should be continually rotated as you pull. This only
        	takes effect when using the 'Rotate' Animation Style.
        -->
        <attr name="pub_fw_ptrRotateDrawableWhilePulling" format="reference|boolean" />

        <attr name="pub_fw_prtHeaderStyle">
            <flag name="pub_fw_normal" value="0x0" />
            <flag name="pub_fw_blue" value="0x1" />

        </attr>
    </declare-styleable>
</resources>